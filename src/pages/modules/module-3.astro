---
import BaseLayout from "../../layouts/BaseLayout.astro";
import LimitsHeader from "../../components/LimitsHeader.astro";
import "../../styles/modules.scss";
---

<BaseLayout>
  <LimitsHeader />
  <main class="fluid-container">
    <ul class="lessons">
      <li class="lessons--item-header">
        <h1 class="primary-text">LESSON 3: MORE ON ONE-SIDED LIMITS</h1>
        <hr />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_3/m3_1.png" alt="" />
        <img class="span-2-full" src="/images/img_module_3/m3_2.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_3/m3_3.png" alt="" />
      </li>
      <li class="lessons--item">
        <img src="/images/img_module_3/m3_4.png" alt="" />
        <img src="/images/img_module_3/m3_5.png" alt="" />
      </li>
      <hr />
      <li class="lessons--item">
        <img src="/images/img_module_3/m3_6.png" alt="" />
        <img src="/images/img_module_3/m3_7.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2" src="/images/img_module_3/m3_8.png" alt="" />
      </li>
      <hr />
      <li class="lessons--item">
        <img src="/images/img_module_3/m3_9.png" alt="" />
        <img src="/images/img_module_3/m3_10.png" alt="" />
      </li>
      <hr />
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_3/m3_11.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2" src="/images/img_module_3/m3_12.png" alt="" />
      </li>
      <p class="secondary-text text-center">
        One-Sided Limits | Right & Left Hand Limits || Differential Calculus
        Explained in Filipino
      </p>
      <li class="video-container lessons--item">
        <iframe
          class="span-2-full"
          src="https://www.youtube.com/embed/xFKDRWjUqNQ"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </li>
      <li class="lessons--item">
        <div class="switch span-2-full clicked">
          <input type="checkbox" id="switch-btn3" />
          <label for="switch-btn3">
            <span class="switch-label secondary-text">Complete Module</span>
          </label>
        </div>

        <div id="confirm-box" class="confirm-box">
          <p class="secondary-text">Check complete module?</p>
          <button id="confirm-yes-btn" class="btn btn--confirm">Yes</button>
          <button id="confirm-no-btn" class="btn btn--deny">No</button>
        </div>
        <div id="overlay"></div>
      </li>
    </ul>
  </main>
</BaseLayout>
<script src="../../scripts/login.js"></script>
