---
import BaseLayout from "../../layouts/BaseLayout.astro";
import LimitsHeader from "../../components/LimitsHeader.astro";
import "../../styles/modules.scss";
---

<BaseLayout>
  <LimitsHeader />
  <main class="fluid-container">
    <ul class="lessons">
      <li class="lessons--item-header">
        <h1 class="primary-text">LESSON 7: CONTINUITY</h1>
        <hr />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_7/m7_1.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_7/m7_3.png" alt="" />
        <img class="span-2-full" src="/images/img_module_7/m7_2.png" alt="" />
      </li>

      <li class="lessons--item-header">
        <h1 class="primary-text text-center">Types of Discontinuity:</h1>
        <hr />
      </li>
      <li class="video-container lessons--item">
        <iframe
          class="span-2-full"
          src="https://www.youtube.com/embed/joewRl1CTL8"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </li>

      <li class="lessons--item-header">
        <h1 class="primary-text text-center">3 Stepts Continuity Test:</h1>
        <hr />
      </li>
      <li class="video-container lessons--item">
        <iframe
          class="span-2-full"
          src="https://www.youtube.com/embed/WT7oxiiFYt8"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </li>

      <li class="lessons--item-header">
        <h1 class="primary-text text-center">Limits and Continuity</h1>
        <hr />
      </li>
      <li class="video-container lessons--item">
        <iframe
          class="span-2-full"
          src="https://www.youtube.com/embed/9brk313DjV8"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </li>

      <li class="lessons--item">
        <div class="switch span-2-full clicked">
          <input type="checkbox" id="switch-btn7" />
          <label for="switch-btn7">
            <span class="switch-label secondary-text">Mark as complete</span>
          </label>
        </div>

        <div id="confirm-box7" class="confirm-box">
          <p class="secondary-text">Check complete module?</p>
          <button id="confirm-yes-btn7" class="btn btn--confirm">Yes</button>
          <button id="confirm-no-btn7" class="btn btn--deny">No</button>
        </div>
        <div id="overlay7" class="overlay"></div>
      </li>
    </ul>
  </main>
</BaseLayout>
<script src="../../scripts/switch.js"></script>
