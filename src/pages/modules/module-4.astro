---
import BaseLayout from "../../layouts/BaseLayout.astro";
import LimitsHeader from "../../components/LimitsHeader.astro";
import "../../styles/modules.scss";
---

<BaseLayout>
  <LimitsHeader />
  <main class="fluid-container">
    <ul class="lessons">
      <li class="lessons--item-header">
        <h1 class="primary-text">
          LESSON 4: INFINITE LIMITS AND LIMITS AT INFINITY
        </h1>
        <hr />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_4/m4_1.png" alt="" />
        <img class="span-2-full" src="/images/img_module_4/m4_2.png" alt="" />
        <img class="span-2-full" src="/images/img_module_4/m4_15.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_4/m4_4.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_4/m4_5.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_4/m4_6.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_4/m4_7.png" alt="" />
      </li>
      <hr />
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_4/m4_8.png" alt="" />
        <img class="span-2-full" src="/images/img_module_4/m4_9.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_4/m4_15.png" alt="" />
        <img class="span-2-full" src="/images/img_module_4/m4_10.png" alt="" />
        <img class="span-2-full" src="/images/img_module_4/m4_11.png" alt="" />
        <img class="span-2-full" src="/images/img_module_4/m4_12.png" alt="" />
        <img class="span-2-full" src="/images/img_module_4/m4_13.png" alt="" />
        <img class="span-2-full" src="/images/img_module_4/m4_14.png" alt="" />
      </li>
      <p class="secondary-text text-center">
        Infinite Limits || Differential Calculus Explained in Filipino
      </p>
      <li class="video-container lessons--item">
        <iframe
          class="span-2-full"
          src="https://www.youtube.com/embed/_U_w6RXAK9A"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </li>

      <p class="secondary-text text-center">
        Theorems on Infinite Limits - Basic/Differential Calculus
      </p>
      <li class="video-container lessons--item">
        <iframe
          class="span-2-full"
          src="https://www.youtube.com/embed/olo8IKenTbY"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </li>

      <p class="secondary-text text-center">
        Infinite Limits and Vertical Asymptotes
      </p>
      <li class="video-container lessons--item">
        <iframe
          class="span-2-full"
          src="https://www.youtube.com/embed/xvFqomOpLrs"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </li>
      <li class="lessons--item">
        <div class="switch span-2-full clicked">
          <input type="checkbox" id="switch-btn4" />
          <label for="switch-btn4">
            <span class="switch-label secondary-text">Complete Module</span>
          </label>
        </div>

        <div id="confirm-box" class="confirm-box">
          <p class="secondary-text">Check complete module?</p>
          <button id="confirm-yes-btn" class="btn btn--confirm">Yes</button>
          <button id="confirm-no-btn" class="btn btn--deny">No</button>
        </div>
        <div id="overlay"></div>
      </li>
    </ul>
  </main>
</BaseLayout>
<script src="../../scripts/login.js"></script>
