---
import BaseLayout from "../../layouts/BaseLayout.astro";
import LimitsHeader from "../../components/LimitsHeader.astro";
import "../../styles/modules.scss";
---

<BaseLayout>
  <LimitsHeader />
  <main class="fluid-container">
    <ul class="lessons">
      <li class="lessons--item-header">
        <h1 class="primary-text">LESSON 12: APPLICATION OF DERIVATIVES</h1>
        <hr />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_12/m12_1.png" alt="" />
        <img class="span-2-full" src="/images/img_module_12/m12_2.png" alt="" />
        <img class="span-2-full" src="/images/img_module_12/m12_3.png" alt="" />
        <img class="span-2-full" src="/images/img_module_12/m12_4.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_12/m12_5.png" alt="" />
      </li>
      <li class="lessons--item">
        <img src="/images/img_module_12/m12_6.png" alt="" />
        <img src="/images/img_module_12/m12_7.png" alt="" />
        <img src="/images/img_module_12/m12_8.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_12/m12_9.png" alt="" />
        <img
          class="span-2-full"
          src="/images/img_module_12/m12_10.png"
          alt=""
        />
      </li>
      <hr />
      <li class="lessons--item">
        <img
          class="span-2-full"
          src="/images/img_module_12/m12_11.png"
          alt=""
        />
        <img
          class="span-2-full"
          src="/images/img_module_12/m12_12.png"
          alt=""
        />
        <img class="span-2" src="/images/img_module_12/m12_13.png" alt="" />
      </li>
      <li class="lessons--item">
        <img
          class="span-2-full"
          src="/images/img_module_12/m12_14.png"
          alt=""
        />
        <img src="/images/img_module_12/m12_15.png" alt="" />
        <img src="/images/img_module_12/m12_16.png" alt="" />
      </li>
      <li class="lessons--item">
        <img
          class="span-2-full"
          src="/images/img_module_12/m12_17.png"
          alt=""
        />
      </li>
      <li class="lessons--item">
        <img class="span-2" src="/images/img_module_12/m12_18.png" alt="" />
        <img
          class="span-2-full"
          src="/images/img_module_12/m12_19.png"
          alt=""
        />
      </li>
      <li class="lessons--item">
        <div class="switch span-2-full clicked">
          <input type="checkbox" id="switch-btn12" />
          <label for="switch-btn12">
            <span class="switch-label secondary-text">Complete Module</span>
          </label>
        </div>

        <div id="confirm-box" class="confirm-box">
          <p class="secondary-text">Check complete module?</p>
          <button id="confirm-yes-btn" class="btn btn--confirm">Yes</button>
          <button id="confirm-no-btn" class="btn btn--deny">No</button>
        </div>
        <div id="overlay"></div>
      </li>
    </ul>
  </main>
</BaseLayout>
<script src="../../scripts/login.js"></script>
