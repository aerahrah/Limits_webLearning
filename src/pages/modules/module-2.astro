---
import BaseLayout from "../../layouts/BaseLayout.astro";
import LimitsHeader from "../../components/LimitsHeader.astro";
import "../../styles/modules.scss";
---

<BaseLayout>
  <LimitsHeader />
  <main class="fluid-container">
    <ul class="lessons">
      <li class="lessons--item-header">
        <h1 class="primary-text">LESSON 2: EVALUATING LIMITS</h1>
        <hr />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_1.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_3.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_4.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_13.png" alt="" />
        <img class="span-2-full" src="/images/img_module_2/m2_5.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_6.png" alt="" />
        <img class="span-2-full" src="/images/img_module_2/m2_7.png" alt="" />
      </li>
      <li class="lessons--item-header">
        <hr />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_8.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_9.png" alt="" />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_10.png" alt="" />
      </li>
      <li class="lessons--item-header">
        <hr />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_11.png" alt="" />
      </li>
      <li class="lessons--item-header">
        <hr />
      </li>
      <li class="lessons--item">
        <img class="span-2-full" src="/images/img_module_2/m2_12.png" alt="" />
      </li>

      <li class="lessons--item-header">
        <h1 class="primary-text text-center">
          Basic Calculus - Evaluating Limits
        </h1>
        <hr />
      </li>

      <li class="video-container lessons--item">
        <iframe
          class="span-2-full"
          src="https://www.youtube.com/embed/_DzfIMvELjU"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen></iframe>
      </li>
      <li class="lessons--item">
        <div class="switch span-2-full clicked">
          <input type="checkbox" id="switch-btn2" />
          <label for="switch-btn2">
            <span class="switch-label secondary-text">Mark as complete</span>
          </label>
        </div>

        <div id="confirm-box2" class="confirm-box">
          <p class="secondary-text">Check complete module?</p>
          <button id="confirm-yes-btn2" class="btn btn--confirm">Yes</button>
          <button id="confirm-no-btn2" class="btn btn--deny">No</button>
        </div>
        <div id="overlay2" class="overlay"></div>
      </li>
    </ul>
  </main>
</BaseLayout>
<script src="../../scripts/switch.js"></script>
