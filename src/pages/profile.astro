---
import BaseLayout from "../layouts/BaseLayout.astro";
import LimitsHeader from "../components/LimitsHeader.astro";
import "../styles/profile.scss";
---

<BaseLayout>
  <LimitsHeader />
  <main class="fluid-container">
    <div id="loading-screen">
      <div class="spinner"></div>
    </div>
    <div id="overlay-profile" class="overlay"></div>
    <div id="avatar-img-container" class="card-container">
      <div class="avatar-container">
        <i id="close-btn" class="fa-solid fa-circle-xmark"></i>
        <div class="avatar-img-item">
          <img
            id="avatar-img-default"
            src="/images/img_avatar/img_default.png"
            alt=""
          />
        </div>
        <div class="avatar-img-item">
          <img id="avatar-img-1" src="/images/img_avatar/img_2.png" alt="" />
        </div>
        <div class="avatar-img-item">
          <img id="avatar-img-2" src="/images/img_avatar/img_3.png" alt="" />
        </div>
        <div class="avatar-img-item">
          <img id="avatar-img-3" src="/images/img_avatar/img_4.png" alt="" />
        </div>
        <div class="avatar-img-item">
          <img id="avatar-img-4" src="/images/img_avatar/img_5.png" alt="" />
        </div>
        <div class="avatar-img-item">
          <img id="avatar-img-5" src="/images/img_avatar/img_6.png" alt="" />
        </div>
        <div class="avatar-img-item">
          <img id="avatar-img-6" src="/images/img_avatar/img_7.png" alt="" />
        </div>
        <div class="avatar-img-item">
          <img id="avatar-img-7" src="/images/img_avatar/img_8.png" alt="" />
        </div>
      </div>
    </div>

    <div class="profile-container">
      <div class="img">
        <div class="icon-container">
          <img id="avatar-img" src="" alt="" />
          <i id="avatar-change" class="fa-regular fa-pen-to-square"></i>
        </div>
        <p id="username">loading...</p>
      </div>
      <div class="dashboard-items">
        <div class="dashboard-items-title">daily studying goals</div>
        <div class="dashboard-items-box">
          <div class="dashboard-items--container">
            <div class="item-container">
              <p class="item-container--1">topics learned</p>
              <div class="item-container--white">
                <div class="progress-container">
                  <div class="progress-bar" id="progress-bar"></div>
                </div>
                <div id="progress-text" class="tertiary-text"></div>
              </div>
            </div>
            <div class="item-container">
              <p class="item-container--2">spaced repetition</p>
              <div class="item-container--white">adsf</div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-container-profile">
        <div class="card-item card-container-profile--1">
          <div id="preTestTaker" class="card-item--number">N/A</div>
          <p class="text">Pretest Taker</p>
        </div>
        <div class="card-item card-container-profile--2">
          <div id="pre-score" class="card-item--number">N/A</div>
          <p class="text">Pre-Score</p>
        </div>
        <div class="card-item card-container-profile--3">
          <div id="post-score" class="card-item--number">N/A</div>
          <p class="text">Post-Score</p>
        </div>
        <div class="card-item card-container-profile--4">
          <div id="sum-score" class="card-item--number">N/A</div>
          <p class="text">Summative Score</p>
        </div>
        <div class="card-item card-container-profile--5">
          <div id="numOfQuizTaken" class="card-item--number">N/A</div>
          <p class="text">No. of practice quiz taken</p>
        </div>
      </div>
    </div>
  </main>
  <script src="../scripts/dashboard.js"></script>
</BaseLayout>
