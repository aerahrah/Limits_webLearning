---
import BaseLayout from "../layouts/BaseLayout.astro";
import LimitsHeader from "../components/LimitsHeader.astro";
import "../styles/lesson.scss";
---

<BaseLayout>
  <LimitsHeader />
  <main class="fluid-container">
    <div id="loading-screen">
      <div class="spinner"></div>
    </div>
    <ul class="lessons">
      <h1 class="primary-text text-center">USER MANUAL</h1>
      <li class="lessons--item">
        <div class="lessons--item-1">Homepage Guide</div>
        <a class="lessons--item-2" href="/guides/homepage-guide">open</a>
      </li>
      <li class="lessons--item">
        <div class="lessons--item-1">Profile Guide</div>
        <a class="lessons--item-2" href="/guides/profile-guide">open</a>
      </li>
      <li class="lessons--item">
        <div class="lessons--item-1">lesson Guide</div>
        <a class="lessons--item-2" href="/guides/lesson-guide">open</a>
      </li>
      <li class="lessons--item">
        <div class="lessons--item-1">quiz guide</div>
        <a class="lessons--item-2" href="/guides/quiz-guide">open</a>
      </li>
    </ul>
  </main>
  <script src="../scripts/lesson.js"></script>
</BaseLayout>
